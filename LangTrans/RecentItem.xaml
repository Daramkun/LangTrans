<UserControl x:Class="LangTrans.RecentItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    Language="ko-kr"
    d:DesignHeight="110" d:DesignWidth="460">
    
    <Grid x:Name="LayoutRoot">
        <TextBlock Height="50" Name="txtText" Text="Sample" VerticalAlignment="Top" TextAlignment="Left" TextTrimming="WordEllipsis" FontSize="36" Margin="12,12,12,0" />
        <TextBlock Height="30" Margin="12,68,12,0" Name="txtLang" Text="(Sample -&gt; Sample)" VerticalAlignment="Top" TextTrimming="WordEllipsis" TextAlignment="Left" Foreground="#FFC4C4C4" />
    </Grid>
</UserControl>
